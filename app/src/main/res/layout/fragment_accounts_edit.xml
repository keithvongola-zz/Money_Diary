<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_edit_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/account_name_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/TextInputContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_name"
                style="@style/ListItemText" />

            <EditText
                android:id="@+id/et_account_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:lines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_type_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/TextInputContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_type"
                style="@style/ListItemText" />

            <EditText
                android:id="@+id/et_account_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:lines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_balance_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/TextInputContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_balance"
                style="@style/ListItemText" />

            <EditText
                android:id="@+id/et_account_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:cursorVisible="false"
                android:duplicateParentState="true"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_currency_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:focusable="false"
            style="@style/TextInputContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_currency"
                style="@style/ListItemText" />

            <EditText
                android:id="@+id/et_account_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_institution_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/TextInputContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_institution"
                style="@style/ListItemText" />

            <EditText
                android:id="@+id/et_account_institution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:background="@android:color/transparent"
                android:lines="1"
                android:imeOptions="actionDone" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
