<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detail_container"
    app:orientation="horizontal"
    app:rowCount="4"
    app:columnCount="2"
    android:background="@color/colorAmber400"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:elevation="2dp">

        <TextView
            android:id="@+id/toolbar_budget_info_title_balance"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:textSize="@dimen/text_desc_size"
            app:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_budget_info_balance"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:text="@string/hint_empty"
            app:layout_gravity="center"
            style="@style/HomeInfoAmount" />

        <TextView
            android:id="@+id/toolbar_budget_info_title_left"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_budget_info_title_right"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_budget_info_left"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            android:text="@string/hint_empty" />

        <TextView
            android:id="@+id/toolbar_budget_info_right"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            android:text="@string/hint_empty" />
</android.support.v7.widget.GridLayout>

